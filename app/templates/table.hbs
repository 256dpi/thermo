<h1 class="content__title">
  <LinkTo @route="table">
    {{this.config.plural}}
  </LinkTo>

  {{#unless this.config.listOnly}}
    <button type="button" class="content__title__button" {{on "click" this.newItem}}>
      New
    </button>
  {{/unless}}
</h1>

<!-- TODO: Scopes (sub-nav) -->

<Table
  @config={{this.config}}
  @list={{this.model}}
  @sort={{this.sort}}
  @filter={{this.decodeFilter}}
  @count={{this.pageSize}}
  @page={{this.pageNumber}}
  @refresh={{this.refresh}}
  @changedSort={{fn (mut this.sort)}}
  @changedFilter={{this.encodeFilter}}
  @changedCount={{fn (mut this.pageSize)}}
  @changedPage={{this.setPageNumber}}
  @changedCursor={{this.setPageCursor}}
  @clicked={{this.editItem}}
/>