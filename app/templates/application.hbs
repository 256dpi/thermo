{{page-title this.blueprint.title}}

{{#if this.session.isAuthenticated}}
  <div class="nav">
    <nav class="nav__wrapper">
      <ul class="nav__list">
        <li class="nav__list__title">
          <LinkTo @route="index">
            {{this.blueprint.title}}
          </LinkTo>
        </li>

        {{#each this.blueprint.menu.left as |item|}}
          <li class="nav__list__item">
            <LinkTo @route="table" @model={{item.model}}>
              {{item.title}}
            </LinkTo>
          </li>
        {{/each}}
      </ul>

      <ul class="nav__list">
        {{#each this.blueprint.menu.right as |item|}}
          <li class="nav__list__item">
            <LinkTo @route="table" @model={{item.model}}>
              {{item.title}}
            </LinkTo>
          </li>
        {{/each}}

        <li class="nav__list__item">
          <button type="button" {{on "click" this.logout}}>
            Sign Out
          </button>
        </li>
      </ul>
    </nav>
  </div>
{{/if}}

<div class="content">
  {{outlet}}
</div>