<div class="dialog">
  <h1>{{blueprint.title}}</h1>

  {{#inputs/form submit=(action "signIn") error=error button="Sign In"}}
    {{inputs/string
      label="Email"
      value=email
      placeholder="me@example.com"}}

    {{inputs/string
      label="Password"
      value=password
      redacted=true
      placeholder="****"}}
  {{/inputs/form}}
</div>