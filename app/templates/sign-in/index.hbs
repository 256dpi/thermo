<div class="dialog">
  <h1>
    {{this.blueprint.title}}
  </h1>

  <form class="form" {{action "signIn" on="submit"}}>
    {{inputs/string
      label="Email"
      value=this.email
      placeholder="me@example.com"}}

    {{inputs/string
      label="Password"
      value=this.password
      redacted=true
      placeholder="****"}}

    <div class="form__row">
      <button class="form__button" type="submit">
        Sign In
      </button>
    </div>

    {{#if this.error}}
      <div class="form__error">
        {{this.error}}
      </div>
    {{/if}}
  </form>
</div>