<div class="dialog">
  <h1>
    {{this.blueprint.title}}
  </h1>

  <form class="form" {{action "signIn" on="submit"}}>
    <div class="form__row">
      {{inputs/string
              label="Email"
              value=this.email
              placeholder="me@example.com"}}
    </div>

    <div class="form__row">
      {{inputs/string
              label="Password"
              value=this.password
              redacted=true
              placeholder="****"}}
    </div>

    <div class="form__row">
      <button class="form__button" type="submit">
        Sign In
      </button>
    </div>

    {{#if this.error}}
      <div class="form__error">
        {{this.error}}
      </div>
    {{/if}}
  </form>
</div>