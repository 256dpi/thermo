{{#if (eq @type "string")}}
  <Controls::String
    @id={{@id}}
    @value={{@value}}
    @changed={{@changed}}
    @disabled={{@disabled}}
    @placeholder={{@placeholder}}
    @redacted={{@redacted}}
  />
{{else if (eq @type "text")}}
  <Controls::Text
    @id={{@id}}
    @value={{@value}}
    @changed={{@changed}}
    @disabled={{@disabled}}
    @placeholder={{@placeholder}}
  />
{{else if (eq @type "boolean")}}
  <Controls::Boolean @id={{@id}} @value={{@value}} @changed={{@changed}} @disabled={{@disabled}} />
{{else if (eq @type "number")}}
  <Controls::Number
    @id={{@id}}
    @value={{@value}}
    @changed={{@changed}}
    @disabled={{@disabled}}
    @placeholder={{@placeholder}}
    @min={{@min}}
    @max={{@max}}
    @step={{@step}}
  />
{{else if (eq @type "date")}}
  <Controls::Date
    @id={{@id}}
    @value={{@value}}
    @changed={{@changed}}
    @disabled={{@disabled}}
    @placeholder={{@placeholder}}
  />
{{else if (eq @type "select")}}
  <Controls::Select @id={{@id}} @value={{@value}} @changed={{@changed}} @disabled={{@disabled}} @options={{@options}} />
{{else if (eq @type "reference")}}
  <Controls::Reference
    @id={{@id}}
    @value={{@value}}
    @changed={{@changed}}
    @disabled={{@disabled}}
    @collection={{@collection}}
    @multiple={{@multiple}}
    @labelKey={{@labelKey}}
    @emptyLabel={{@emptyLabel}}
    @allowEmpty={{@allowEmpty}}
  />
{{else if (eq @type "well")}}
  <Controls::Well @id={{@id}} @value={{@value}} />
{{else if (eq @type "file")}}
  <Controls::File
    @id={{@id}}
    @key={{@key}}
    @value={{@value}}
    @model={{@model}}
    @changed={{@changed}}
    @disabled={{@disabled}}
    @multiple={{@multiple}}
    @accept={{@accept}}
  />
{{else}}
  <Controls::Json
    @id={{@id}}
    @value={{@value}}
    @changed={{@changed}}
    @disabled={{@disabled}}
    @placeholder={{@placeholder}}
  />
{{/if}}