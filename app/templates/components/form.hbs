{{#each config.fields as |field|}}
  {{#if (eq field.kind "value")}}
    {{#if (eq field.type "string")}}
      {{inputs/string
              label=field.title
              value=(get model field.name)
              placeholder=field.placeholder
              redacted=field.redacted}}
    {{else if (eq field.type "boolean")}}
      {{inputs/boolean
              label=field.title
              value=(get model field.name)}}
    {{else if (eq field.type "number")}}
      {{inputs/number
              label=field.title
              value=(get model field.name)
              placeholder=field.placeholder
              min=field.min
              max=field.max}}
    {{/if}}
  {{/if}}
{{/each}}