<form class="form" {{action submit on="submit"}}>
  {{#each this.config.fields as |field|}}
    <div class="form__row">
      {{#if (eq field.control "string")}}
        {{inputs/string
                label=field.label
                value=(get this.model field.key)
                hint=field.hint
                placeholder=field.placeholder
                redacted=field.redacted}}
      {{else if (eq field.control "string")}}
        {{inputs/text
                label=field.label
                value=(get this.model field.key)
                hint=field.hint
                placeholder=field.placeholder}}
      {{else if (eq field.control "boolean")}}
        {{inputs/boolean
                label=field.label
                value=(get this.model field.key)
                hint=field.hint}}
      {{else if (eq field.control "number")}}
        {{inputs/number
                label=field.label
                value=(get this.model field.key)
                hint=field.hint
                placeholder=field.placeholder
                min=field.min
                max=field.max}}
      {{else if (eq field.control "date")}}
        {{inputs/date
                label=field.label
                value=(get this.model field.key)
                hint=field.hint
                placeholder=field.placeholder}}
      {{else if (eq field.control "select")}}
        {{inputs/select
                label=field.label
                value=(get this.model field.key)
                hint=field.hint
                collection=(evaluate field.source this.model)}}
      {{else if (eq field.control "well")}}
        {{inputs/well
                label=field.label
                value=(get this.model field.key)
                hint=field.hint}}
      {{/if}}
    </div>
  {{/each}}

  <div class="form__row">
    <button class="form__button" type="submit">
      {{this.button}}
    </button>

    {{#if this.deleteButton}}
      <button class="form__button" type="button" {{action delete}}>
        {{this.deleteButton}}
      </button>
    {{/if}}
  </div>

  {{#if this.error}}
    <div class="form__error">
      {{this.error}}
    </div>
  {{/if}}
</form>