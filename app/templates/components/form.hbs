{{#each config.fields as |field|}}
  {{#if (eq field.control "string")}}
    {{inputs/string
            label=field.label
            value=(get model field.key)
            hint=field.hint
            placeholder=field.placeholder
            redacted=field.redacted}}
  {{else if (eq field.control "boolean")}}
    {{inputs/boolean
            label=field.label
            value=(get model field.key)
            hint=field.hint}}
  {{else if (eq field.control "number")}}
    {{inputs/number
            label=field.label
            value=(get model field.key)
            hint=field.hint
            placeholder=field.placeholder
            min=field.min
            max=field.max}}
  {{else if (eq field.control "date")}}
    {{inputs/date
            label=field.label
            value=(get model field.key)
            hint=field.hint
            placeholder=field.placeholder}}
  {{/if}}
{{/each}}