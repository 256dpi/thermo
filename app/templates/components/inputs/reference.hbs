{{#if @label}}
  <label class="input__label" for={{guid-for this}}>
    {{@label}}
  </label>
{{/if}}

{{#if @multiple}}
  <PowerSelectMultiple
    @triggerId={{guid-for this}}
    @selected={{this.selected}}
    @options={{this.options}}
    @disabled={{@disabled}}
    @onChange={{this.select}}
    @searchEnabled={{false}}
    @verticalPosition="below"
  as |item|>
    {{get item this.labelField}}
  </PowerSelectMultiple>
{{else}}
  <PowerSelect
    @triggerId={{guid-for this}}
    @selected={{this.selected}}
    @options={{this.options}}
    @disabled={{@disabled}}
    @onChange={{this.select}}
    @searchEnabled={{false}}
    @verticalPosition="below"
  as |item|>
    {{get item this.labelField}}
  </PowerSelect>
{{/if}}

{{#if @hint}}
  <div class="input__hint">
    {{@hint}}
  </div>
{{/if}}