{{#if @label}}
  <label class="input__label">
    {{@label}}
  </label>
{{/if}}

{{#if @multiple}}
  {{#power-select-multiple
    selected=this.selected
    options=this.options
    disabled=@disabled
    onchange=this.select
    searchEnabled=false
    verticalPosition="below"
  as |item| }}
    {{get item this.labelField}}
  {{/power-select-multiple}}
{{else}}
  {{#power-select
    selected=this.selected
    options=this.options
    disabled=@disabled
    onchange=this.select
    searchEnabled=false
    verticalPosition="below"
  as |item| }}
    {{get item this.labelField}}
  {{/power-select}}
{{/if}}

{{#if @hint}}
  <div class="input__hint">
    {{@hint}}
  </div>
{{/if}}