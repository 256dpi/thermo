{{#if @multiple}}
  <PowerSelectMultiple
    @triggerId={{@id}}
    @selected={{this.selected}}
    @options={{this.options}}
    @disabled={{@disabled}}
    @onChange={{this.select}}
    @searchEnabled={{false}}
    @verticalPosition="below"
    as |item|
  >
    {{get item this.labelKey}}
  </PowerSelectMultiple>
{{else}}
  <PowerSelect
    @triggerId={{@id}}
    @selected={{this.selected}}
    @options={{this.options}}
    @disabled={{@disabled}}
    @onChange={{this.select}}
    @searchEnabled={{false}}
    @verticalPosition="below"
    as |item|
  >
    {{get item this.labelKey}}
  </PowerSelect>
{{/if}}