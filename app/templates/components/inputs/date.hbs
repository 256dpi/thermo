<div class="form__row">
  <div class="form__head">
    <label class="form__head__label">
      {{this.label}}
    </label>
  </div>

  <EmberFlatpickr class="form__date"
                  placeholder={{placeholder}}
                  @date={{value}}
                  @onChange={{fn (mut value)}}
                  @enableTime={{true}}
                  @time_24hr={{true}}
                  @allowInput={{not disabled}}/>

  {{#if this.hint}}
    <div class="form__hint">
      {{this.hint}}
    </div>
  {{/if}}
</div>