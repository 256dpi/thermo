<div class="form__row">
  <div class="form__head">
    <label class="form__head__label">
      {{this.label}}
    </label>
  </div>

  <!-- TODO: Does not show existing date... -->

  <Input class="form__date"
         @type="datetime-local"
         @value={{this.value}}
         @disabled={{this.disabled}}/>

  {{#if this.hint}}
    <div class="form__hint">
      {{this.hint}}
    </div>
  {{/if}}
</div>