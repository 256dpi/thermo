{{#if @label}}
  <label class="input__label" for={{guid-for this}}>
    {{@label}}
  </label>
{{/if}}

<EmberFlatpickr id={{guid-for this}}
                class="input__date"
                placeholder={{@placeholder}}
                @date={{or @value this.now}}
                @onChange={{fn (mut @value)}}
                @enableTime={{true}}
                @time_24hr={{true}}
                @allowInput={{not @disabled}}/>

{{#if @hint}}
  <div class="input__hint">
    {{@hint}}
  </div>
{{/if}}