{{#if @label}}
  <label class="input__label" for={{guid-for this}}>
    {{@label}}
  </label>
{{/if}}

<Input id={{guid-for this}}
       class="input__number"
       @type="number"
       @value={{@value}}
       @disabled={{@disabled}}
       @placeholder={{@placeholder}}
       @min={{@min}}
       @max={{@max}}/>

{{#if @hint}}
  <div class="input__hint">
    {{@hint}}
  </div>
{{/if}}