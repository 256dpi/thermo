{{#let (changeset this.model) as |changeset|}}
  <Form
    @config={{this.config}}
    @model={{this.model}}
    @changeset={{changeset}}
    @onSubmit={{queue (save-model changeset) (transition "table")}}
    @onCancel={{transition "table"}}
    @onDelete={{confirm "Sure?" (queue (delete-model this.model) (transition "table"))}}
    @onAbandon={{confirm "Abandon?"}}
  />
{{/let}}