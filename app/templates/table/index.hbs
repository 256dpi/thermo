<table class="table">
  <thead>
    <th width="1">
      ID
    </th>

    {{#each config.columns as |column|}}
      <th>{{column.title}}</th>
    {{/each}}
  </thead>

  <tbody>
    {{#each model as |item|}}
      <tr>
        <td>
          {{link-to item.id "table.edit" item.id}}
        </td>

        {{#each config.columns as |column|}}
          <td>
            {{#if (eq column.format "boolean")}}
              {{if (get item column.key) "True" "False"}}
            {{else if (eq column.format "absolute-date")}}
              {{moment-format (get item column.key) "YYYY-MM-DD HH:MM:SS"}}
            {{else if (eq column.format "relative-date")}}
              {{moment-from-now (get item column.key)}}
            {{else}}
              {{get item column.key}}
            {{/if}}
          </td>
        {{/each}}
      </tr>
    {{/each}}
  </tbody>
</table>