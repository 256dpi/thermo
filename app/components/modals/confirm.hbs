<div class="modal">
  <h2 class="modal__title">
    Confirm
  </h2>

  <p>
    {{@data.text}}
  </p>

  <div class="toolbar">
    <div class="toolbar__group">
      <button type="button" {{on "click" @complete}}>
        OK
      </button>
    </div>

    <div class="toolbar__group">
      <button type="button" {{on "click" @dismiss}}>
        Cancel
      </button>
    </div>
  </div>
</div>